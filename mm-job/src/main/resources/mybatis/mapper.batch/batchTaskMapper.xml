<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wasu.springboot.integration.batch.dao.impl.BatchTaskDaoImpl">

    <select id="update" parameterType="java.util.Map">
        UPDATE sys_batch_task
        SET usestatus = #{useStatus},mtime=now(),updater=#{updater}
        WHERE isvalid = 1
        AND id =#{id}
    </select>
</mapper>